# vim: ft=sshconfig

# for syncing local env with codespace, i.e. by first running the following:
#
# gh cs ssh --server-port 1234
#
# we can then access the codespace through native ssh
#
# https://icanthascheezburger.com/wordpress/2021/12/use-codespaces-with-mutagen-and-keep-your-local-dev-tools
#
Host codespace
    User vscode
    HostName localhost
    Port 1234
    NoHostAuthenticationForLocalhost yes
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ControlMaster auto
